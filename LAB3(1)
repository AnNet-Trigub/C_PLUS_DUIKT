#include <iostream>

int main() {
    int N;
    std::cout << "Enter a three-digit positive number: ";
    std::cin >> N;

    int a = N / 100;        
    int b = (N / 10) % 10; 
    int c = N % 10;        

    int product = 1;
    bool hasEven = false;

    if (a % 2 == 0) {
        product *= a;
        hasEven = true;
    }
    if (b % 2 == 0) {
        product *= b;
        hasEven = true;
    }
    if (c % 2 == 0) {
        product *= c;
        hasEven = true;
    }

    if (hasEven) {
        std::cout << "Product of even digits = " << product << std::endl;
    } else {
        std::cout << "There are no even digits in the number." << std::endl;
    }

    return 0;
}
